<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:padding="@dimen/card_corner_radius">

    <TextView
        android:id="@+id/tvUserName"
        android:textStyle="bold"
        android:fontFamily="Roboto"
        android:textColor="#000000"
        android:layout_toRightOf="@id/ivProfilePic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/tvUserName"
        android:onClick="details"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="Roboto"
        android:textColor="#000000"
        android:layout_below="@id/iv_heart"
        android:text="TextView" />

    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPost"
        app:srcCompat="@drawable/ic_heart" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDescription"
        android:layout_below="@id/ivPost"
        android:layout_toRightOf="@id/iv_heart"
        app:srcCompat="@drawable/ic_comment" />

    <ImageView
        android:id="@+id/iv_dm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPost"
        android:layout_toRightOf="@id/iv_comment"
        app:srcCompat="@drawable/ic_dm" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPost"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_save" />

    <ImageView
        android:id="@+id/ivProfilePic2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_above="@id/ivPost"
        app:srcCompat="@drawable/ic_user_tab_empty" />

    <TextView
        android:id="@+id/tvCreation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPost"
        android:layout_toRightOf="@id/iv_dm"
        android:text="TextView" />


</RelativeLayout>
